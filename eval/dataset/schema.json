{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UX Agent Evaluation Item",
  "type": "object",
  "required": ["id", "prompt", "expected_components"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
    "archetype": { "type": "string", "enum": ["dashboard","kanban","admin_portal","data_table","detail_page","auth"] },
    "difficulty": { "type": "string", "enum": ["easy","medium","hard"] },
    "prompt": { "type": "string", "minLength": 10 },
    "template_hint": { "type": "string" },
    "expected_components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type","count"],
        "properties": {
          "type": { "type": "string" },
          "count": { "type": "integer", "minimum": 1 },
          "required_props": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                { "type": "string" },
                { "type": "array", "items": { "type": "string" }, "minItems": 1 },
                { "type": "object", "required": ["regex"], "properties": { "regex": { "type": "string" } }, "additionalProperties": false },
                { "type": "object", "required": ["exists"], "properties": { "exists": { "type": "boolean" } }, "additionalProperties": false }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    },
    "expected_slots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slot"],
        "properties": { "slot": { "type": "string" }, "required": { "type": "boolean", "default": true } },
        "additionalProperties": false
      }
    },
    "data_expectations": {
      "type": "object",
      "properties": {
        "table": {
          "type": "object",
          "properties": { "required_columns": { "type": "array", "items": { "type": "string" } } },
          "additionalProperties": false
        },
        "chart": {
          "type": "object",
            "properties": { "requires_legend": { "type": "boolean" }, "requires_axes": { "type": "boolean" } },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "a11y_expectations": { "type": "array", "items": { "type": "string", "enum": ["img_has_alt","landmark_roles","label_for_inputs"] } },
    "layout_expectations": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}